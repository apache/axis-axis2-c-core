# Installation paths (filled in by configure script)
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@/axis2-@VERSION@

# Package metadata
Name: Axis2/C
Version: @VERSION@
Description: Apache Axis2/C Web Services Framework - includes native WSDL2C generator
URL: https://axis.apache.org/axis2/c/core/
Requires:
# Library flags: Core Axis2/C libraries plus required dependencies
Libs: -L${libdir} -lxml2 @LIBS@
# Compiler flags: Include paths for Axis2/C headers
Cflags: -I${includedir}